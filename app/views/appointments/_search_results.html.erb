<body>
  <!-- Navigation -->
  <nav class="navbar navbar-light bg-light static-top">
    <div class="container">
      <%= link_to 'Medic', root_path, class: "navbar-brand" %>
      <%= link_to 'Reservar Cita', appointments_path, class: "nav-link" %>
      <a class="btn btn-primary" href="#signup">Sign Up</a>
      <%= link_to 'Pacientes', root_path, class: "navbar-brand" %>
    </div>
  </nav>

  <div class="container mt-4">
    <%= yield %>
  </div>
</body>
</html>

<!-- app/views/appointments/_search_results.html.erb -->

<% if @results.any? %>
  <h2 class="mt-4">Search Results:</h2>
  <table class="table table-hover mx-5">
    <thead>
      <tr>
        <th scope="col">Doctor</th>
        <th scope="col">Specialty</th>
        <th scope="col">Medic Center</th>
        <th scope="col">Location</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% @results['hits']['hits'].each do |result| %>
        <tr> 
          <td><%= result['_source']['doctor_name'] %></td>
          <td><%= result['_source']['specialty'] %></td>
          <td><%= result['_source']['medic_center'] %></td>
          <td><%= result['_source']['location'] %></td>
          <td><%= result['_source']['date'] %></td>
        </tr>
      <% end %>
    </tbody>  
  </table>
<% else %>
  <p class="mt-4">No results found.</p>
<% end %>
