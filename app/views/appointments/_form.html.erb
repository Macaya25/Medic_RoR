<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date %>
  </div>

  <div class="field">
    <%= label_tag "appointment[doctor_id]", "Doctor" %>
    <%= select_tag "appointment[doctor_id]", options_for_select(Doctor.all.map { |d| [d.name, d.id] }), prompt: "Select a doctor", class: "form-control" %>
  </div>

  

  <div>
    <%= form.label :medic_center, style: "display: block" %>
    <%= form.text_field :medic_center %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>


<%= form_with(model: appointment, class: "my-5") do |form| %>
  <% if appointment.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date, class: "control-label" %>
    <%= form.datetime_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag "appointment[doctor_id]", "Doctor", class: "control-label" %>
    <%= select_tag "appointment[doctor_id]", options_for_select(Doctor.all.map { |d| [d.name, d.id] }), prompt: "Select a doctor", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :medic_center, class: "control-label" %>
    <%= form.text_field :medic_center, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit "Reserve Appointment", class: "btn btn-primary" %>
  </div>
<% end %>
