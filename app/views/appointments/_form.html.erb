<%= form_with(model: appointment, class: "my-5") do |form| %>
  <% if appointment.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>
      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :date, class: "control-label" %>
    <%= form.datetime_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :doctor_id, "Doctor", class: "control-label" %>
    <%= form.collection_select :doctor_id, Doctor.all, :id, :name, { prompt: "Select a doctor" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :medical_center_id, "Medical Center", class: "control-label" %>
    <%= form.collection_select :medical_center_id, MedicalCenter.all, :id, :name, { prompt: "Select a medical center" }, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= form.submit "Reserve Appointment", class: "btn btn-primary" %>
  </div>
<% end %>
